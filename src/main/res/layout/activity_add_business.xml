<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".business.AddBusinessActivity"
    android:background="@mipmap/background1"
    android:padding="30dp">

    <!--BACKENDLESS________________-->
    <LinearLayout
        android:id="@+id/loadingLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="20dp">

        <ProgressBar
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/loadTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="loading...." />
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Business"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/header"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Business Name"
                    android:id="@+id/businessNameEdtTxt"
                    android:inputType="text"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Offer"
                    android:inputType="number"
                    android:id="@+id/offerEdtTxt"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product/Service Description"
                    android:id="@+id/productServiceDescriptionEdtTxt"
                    android:inputType="text"
                    android:lines="3"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Offer Upto"
                    android:inputType="number"
                    android:id="@+id/offerUptoEdtTxt"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:id="@+id/addressEdtTxt"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="city"
                    android:id="@+id/cityEdtTxt"
                    android:inputType="text"
                    android:layout_marginTop="10dp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Locality"
                    android:id="@+id/localityEdtTxt"
                    android:inputType="text"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile"
                    android:id="@+id/mobileEdtTxt"
                    android:inputType="number"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:background="@mipmap/background1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Submit"
                    android:id="@+id/submitBtn"
                    android:layout_marginTop="10dp"/>





            </LinearLayout>




        </RelativeLayout>


    </ScrollView>


</RelativeLayout>